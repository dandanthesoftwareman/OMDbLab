@{
}
<form method="post" asp-action="MovieNight">
    Movie 1:<input type="text" name="Title1" />
    Movie 2:<input type="text" name="Title2" />
    Movie 3:<input type="text" name="Title3" />
    <input type="submit" />
</form>
@{
    if(Model != null)
    {
        foreach(MovieModel m in Model)
        {
        <h1>@m.Title</h1>
        <h4>@m.Runtime</h4>
        <img src="@m.Poster">
        }
    }
}